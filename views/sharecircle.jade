           Do It
        //
           AddTask
        #DoIt.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
                        h4#AddTaskLabel.modal-title Add Task
                    .modal-body
                        .row
                            form#addTaskForm.form-horizontal(role='form')
                                //
                                   Title
                                .form-group
                                    label.col-sm-3.control-label(for='title') Title
                                    .col-sm-5
                                        input#newTitle.form-control(type='text', placeholder='input title')
                                //
                                   Description
                                .form-group
                                    label.col-sm-3.control-label Description
                                    .col-sm-8
                                        textarea#newDescription.form-control(rows='1')
                                //
                                   Box
                                .form-group
                                    label.col-sm-3.control-label Box
                                    .col-sm-4
                                        select#newBox.form-control
                                            option(value='0') Today
                                            option(value='1') Tomorrow
                                //
                                   Start Date
                                .form-group
                                    label.col-sm-3.control-label Start Date
                                    .col-sm-5
                                        .input-group.date.form_date(data-date='1979-09-16T05:25:07Z', data-date-format='dd-mm-yyyy', data-link-field='dtp_input1')
                                            input#newStartDate.form-control(size='16', type='text', value='', readonly='readonly')
                                            span.input-group-addon
                                                span.glyphicon.glyphicon-remove
                                            span.input-group-addon
                                                span.glyphicon.glyphicon-calendar
                                //
                                   Tags
                                .form-group
                                    label.col-sm-3.control-label Tags
                                    .col-sm-8
                                        input#newTagOne.col-sm-3
                                        input#newTagTwo.col-sm-3
                                        input#newTagThree.col-sm-3
                                //
                                   Priority
                                .form-group
                                    label.col-sm-3.control-label Priority
                                    .col-sm-4
                                        select#newPriority.form-control
                                            option(value='0') None
                                            option(value='1') Low
                                            option(value='2') Medium
                                            option(value='3') High
                    .modal-footer
                        button#addTaskClose.btn.btn-default(type='button', data-dismiss='modal') Close
                        button#addTaskPost.btn.btn-primary(type='button') Add Task
                //
                   /.modal-content
            //
               /.modal-dialog
