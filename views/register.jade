doctype html
html
    head(lang='en')
        meta(charset='UTF-8')
        link(href='http://cdn.staticfile.org/twitter-bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')
        link(href='css/style.css', rel='stylesheet')
        link(rel='shortcut icon', href='images/favicon.ico', type='image/png')
        script(src='http://cdn.staticfile.org/jquery/2.1.1-beta1/jquery.min.js')
        script(src='http://cdn.staticfile.org/jquery-validate/1.12.0/jquery.validate.min.js')
        script(src='http://cdn.staticfile.org/jquery-validate/1.12.0/additional-methods.min.js')
        script(src='http://cdn.staticfile.org/twitter-bootstrap/3.1.1/js/bootstrap.min.js')
        script(src='js/register.js')
        title Register
    body.body-register
        .container
            form#registerForm.form-signin(method='post')
                h2 Please Register User
                .form-group
                    label.control-label Email
                    input#email.form-control(type='email', name='email', placeholder='Email Address', required='required', autofocus='autofocus')
                .form-group
                    label.control-label Confirm-Email
                    input#confirm_email.form-control(type='email', name='confirm_email', placeholder='Confirm Email Address', required='required')
                .form-group
                    label.control-label Username
                    input.form-control(type='text', name='username', placeholder='Username', required='required')
                .form-group
                    label.control-label Password
                    input#password.form-control(type='password', name='password', placeholder='Password', required='required')
                .form-group
                    label.control-label Confirm-Password
                    input#confirm_password.form-control(type='password', name='confirm_password', placeholder='Confirm Password', required='required')
                label.checkbox
                    input#i_agree(type='checkbox', name='i_agree', value='agree', required='required')
                    | I agree
                button#register.btn.btn-block.btn-primary.btn-lg(value='submit') Register
