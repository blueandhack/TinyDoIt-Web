doctype html
html
    head(lang='en')
        meta(charset='UTF-8')
        link(href='css/bootstrap.css', rel='stylesheet')
        link(href='css/style.css', rel='stylesheet')
        link(rel='shortcut icon', href='images/favicon.ico', type='image/png')
        script(src='js/jquery.js')
        script(src='js/bootstrap.js')
        script(src='js/register.js')
        title Register
    body.body-register
        .container
            form.form-signin(method='post')
                h2 Please Register User
                .form-group
                    label.control-label Email
                    input#email.form-control(type='text', name='email', placeholder='Email Address', required='required', autofocus='autofocus')
                .form-group
                    label.control-label Re-Email
                    input#re-email.form-control(type='text', name='re-mail', placeholder='Re-Email Address', required='required')
                .form-group
                    label.control-label Username
                    input.form-control(type='text', name='username', placeholder='Username', required='required')
                .form-group
                    label.control-label Password
                    input#password.form-control(type='password', name='password', placeholder='Password', required='required')
                .form-group
                    label.control-label Re-Password
                    input#re-password.form-control(type='password', name='re-password', placeholder='Re-Password', required='required')
                label.checkbox
                    input(type='checkbox', value='agree', required='required')
                    | I agree
                button#register.btn.btn-block.btn-primary.btn-lg(value='submit') Register
