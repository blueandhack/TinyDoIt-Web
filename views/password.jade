doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(href='http://cdn.staticfile.org/twitter-bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')
        link(href='/css/style.css', rel='stylesheet')
        link(rel='shortcut icon', href='/images/favicon.png', type='image/png')
        title 修改密码 - TinyDoIt 微动
    body
        .navbar.navbar-default.navbar-fixed-top(role='navigation')
            .container
                .navbar-header
                    a.navbar-brand(href='/') TinyDoIt&nbsp;
                        img.logo.img-circle(src='/images/favicon.png', title='TinyDoIt')
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(href='/sharecircle') 分享圈
                        li
                            a(href='/help') 帮助
                        li
                            a(href='/about') 关于
                    ul.nav.navbar-nav.navbar-right
                        if(user)
                            li.hidden-xs
                                a(href='/settings') 设置
                                    img.avatar.img-circle(src='#{userHead}', title='设置', alt='我的头像')
                            li
                                a(href='/my')
                                    | 我的任务
                            li.visible-xs
                                a(href='/settings') 设置
                            li
                                a(href='/logout') 登出
                        else
                            li
                                a(href='/signin') 登入
                            li
                                a(href='/register') 注册
                //
                  /.nav-collapse
        .container
            .index
                .row.well
                    h4 #{info}
                    if(check)
                        form.form-horizontal(method='post')
                            #tip
                            .form-group
                                lable.col-sm-2.control-label 新密码
                                .col-sm-3
                                    input#password.form-control(type='password', name='username', placeholder='新密码', required='required', autofocus='autofocus')
                            .form-group
                                lable.col-sm-2.control-label 确认新密码
                                .col-sm-3
                                    input#confirm_password.form-control(type='password', name='confirm_password', placeholder='确认密码', required='required')
                            | <br/>
                            .form-group
                                .col-sm-offset-4.col-sm-1
                                    button#changePassword.btn.btn-block.btn-primary(type='button') 确认找回
        footer.footer
            p
                | ♥ made by&nbsp;
                | <iframe src="http://ghbtns.com/github-btn.html?user=blueandhack&repo=TinyDoItWeb&type=follow" allowtransparency="true" frameborder="0" scrolling="0" width="155" height="20"></iframe>
            p © 2014&nbsp;
                a(href='http://tinydoit.com') TinyDoIt 微动
                | &nbsp;Version: #{ver}
        script(src='http://cdn.staticfile.org/jquery/2.1.1-beta1/jquery.min.js')
        script(src='http://cdn.staticfile.org/twitter-bootstrap/3.1.1/js/bootstrap.min.js')
        script(src='/js/password.js')
